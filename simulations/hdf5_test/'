args = parser.parse_args()

fin = h5py.File(args.inputfilename, 'r')
# plot vertex distribution
fig, ax = plt.subplots(2, 1)
xx = np.array(fin['xx'])
yy = np.array(fin['yy'])
zz = np.array(fin['zz'])
